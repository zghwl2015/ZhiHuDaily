<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black">
    
    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        />
    
    <RelativeLayout
        android:id="@+id/launch_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:background="@color/transparent"
        >
        <com.example.zhihudaily.view.IconView
            android:id="@+id/icon_view"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="知乎日报"
            android:layout_alignTop="@+id/icon_view"
            android:layout_toRightOf="@+id/icon_view"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="每天三次，每次七分钟"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/icon_view"
            android:layout_toRightOf="@+id/icon_view"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>

</RelativeLayout>